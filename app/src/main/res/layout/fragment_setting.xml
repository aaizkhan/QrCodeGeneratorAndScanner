<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.Setting">

    <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="0dp"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_gradient"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/candal"
                android:text="My Code"
                android:textColor="@color/white"
                android:textSize="@dimen/appBar_titleSize"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_below="@id/topBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_ratus"
             android:layout_width="match_parent"
            app:contentPadding="12dp"
            android:layout_margin="8dp"
            android:elevation="5dp"
            app:cardCornerRadius="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Rate Us"
                android:textSize="18sp"
                android:gravity="center"
                android:drawablePadding="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:drawableStart="@drawable/ic_star"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_feedback"
             android:layout_width="match_parent"
            app:contentPadding="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="5dp"
            app:cardCornerRadius="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Give Your Feedback"
                android:textSize="18sp"
                android:gravity="center"
                android:drawablePadding="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:drawableStart="@drawable/ic_feedback_black_24dp"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_privacy"
             android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            app:contentPadding="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="5dp"
            app:cardCornerRadius="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Privacy Policy"
                android:textSize="18sp"
                android:gravity="center"
                android:drawablePadding="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/abeezee"
                android:drawableStart="@drawable/ic_privacy"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>